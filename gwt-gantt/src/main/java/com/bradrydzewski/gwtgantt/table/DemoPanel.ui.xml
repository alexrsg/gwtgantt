<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:br="urn:import:com.bradrydzewski.gwtgantt">
	<ui:style>
		@external gwt-SplitLayoutPanel-HDragger;
		.gwt-SplitLayoutPanel-HDragger {
			width:6px !IMPORTANT;
			border-left:1px solid #AAA;
			border-right:1px solid #AAA;
			background: literal("-moz-linear-gradient( left center, #FFF 0%, #ececec 100%)");
			background-image:literal("-webkit-gradient(linear, left top, right top, color-stop(0, #FFF), color-stop(1, #ececec))");
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:center>
			<g:SplitLayoutPanel>
				<g:west size="500">
					<br:TaskGrid ui:field="grid" width="100%" height="100%" />
				</g:west>
				<g:center>
					<br:GanttChart ui:field="gantt" width="100%" height="100%" />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 